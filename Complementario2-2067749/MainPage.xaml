<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Complementario2_2067749.MainPage">

    <StackLayout>
        <Image Source="images.png" WidthRequest="300" HorizontalOptions="Center" />
        <Entry x:Name="n1"
            Placeholder="Ingrese el primer numero:"
               MaxLength="10"
               IsSpellCheckEnabled="True"
               IsTextPredictionEnabled="True"
               IsPassword="False"
               Keyboard="Numeric" 
               CharacterSpacing="10"/>

        <Entry x:Name="n2"
            Placeholder="Ingrese el segundo numero:"
               MaxLength="10"
               IsSpellCheckEnabled="True"
               IsTextPredictionEnabled="True"
               IsPassword="False"
               Keyboard="Numeric" 
               CharacterSpacing="10"/>

        <Label x:Name="ResultLabel" FontSize="20" />

        <Button Text="Realizar Operacion" Clicked="Button_Clicked"/>

    </StackLayout>

</ContentPage>
